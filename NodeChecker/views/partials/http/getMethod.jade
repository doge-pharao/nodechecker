.row
  .col-xs-12
    .input-group
      span.input-group-addon(id="{{probe._id}}-url") URL
      input.form-control(type="text",placeholder="http://something.com",aria-describedby="{{probe._id}}-url", value="{{probe.url}}")
br
.row
  .col-xs-12
    .panel.panel-default
      .panel-heading Headers
      .panel-body
        div(ng-repeat="header in probe.method.headers" content="header")
          .row_
            .col-xs-6
              .input-group
                span.input-group-addon(id="#{{probe._id}}-header-name") Header name
                input.form-control(type="text",placeholder="http://something.com",aria-describedby="#{{header._id}}-header-name", value="{{header.name}}")

            .col-xs-6
              .input-group
                span.input-group-addon(id="#{{header._id}}-header-value") Header value
                input.form-control(type="text",placeholder="http://something.com",aria-describedby="#{{header._id}}-header-value", value="{{header.value}}")
          .row
            .col-xs-12
              br
